@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>药品供销信息管理系统</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/login_style.css" type="text/css" media="all">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <section class="main">
        <div class="logo text-center">
            <h1>药品供销信息管理系统</h1>
        </div>
        <div class="content-w3ls text-center">
            <img src="~/images/admin.png" alt="" class="img-responsive">
            <form method="post" action="/Account/Login">
                <div class="wthree-field">
                    <select id="option" name="option" class="form-control" required>
                        <option value="a">管理员端</option>
                        <option value="b">客户端</option>
                        <option value="c">供应商端</option>
                    </select>
                </div>
                <div class="wthree-field">
                    @if (ViewBag.UserDoesNotExist == true)
                    {
                        <input name="username" id="username" type="text" value="" placeholder="User does not exist" required>
                    }
                    else
                    {
                        <input name="username" id="username" type="text" value="" placeholder="Username" required>
                    }
                </div>
                <div class="wthree-field">
                    <button type="submit" class="btn">Sign In</button>
                </div>
                <div class="login-bottom">
                    <a href="#url" class=""></a>
                </div>
            </form>
        </div>
        <div class="copyright">
            <p>
                © Designed by Bihui Chen, Siqi Guo, Yuhan Mei</a>
            </p>
        </div>
    </section>

</body>
</html>
